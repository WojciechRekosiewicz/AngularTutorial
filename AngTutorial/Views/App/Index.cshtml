@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-9">
        <div class="product-info">
            <img src="~/img/got.jpg" />
            <h3>Game Of Thrones</h3>
            <ul class="product-props">
                <li>Seasons 1-4</li>
                <li>500 min</li>
                <li>12 chapters per episode</li>
                <li>Much blood such murder</li>
            </ul>
            <button id="buyButton" class="btn btn-success">BUY</button>
        </div>
        <div id="theForm">
            <form>
                <label>Your name:</label>
                <br />
                <input />
                <br />
                <label>Email:</label>
                <br />
                <input type="email" />
                <br />
                <label>Subject:</label>
                <br />
                <input type="text" />
                <br />
                <label>Message:</label>
                <br />
                <textarea rows="4"></textarea>
                <br />
                <input type="submit" value="Send Message" />
            </form>
        </div>

        <div>
            <div id="logginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox" />
                    <label>Remember Me?</label>
                </div>
                <div>
                    <input type="submit" value="Login" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <p>This is a site to buy Movies and Anime</p>
    </div>
</div>
